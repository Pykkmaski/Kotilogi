{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "allowJs": true,
    "skipLibCheck": true,

    "strict": false,

    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["@testing-library/jest-dom", "node", "next"],
    "paths": {
      "@mui/*": ["node_modules/@mui/*"],
      "@tanstack/*": ["node_modules/@tanstack/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/actions/*": ["actions/*"],
      "kotilogi-app/*": ["./*"],
      "@/utils/*": ["utils/*"],
      "@/*": ["./*"],
      "~/*": ["*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    ".next/types/**/*.ts",
    "app/register/page.test.jsx",
    "__mocks__/dbconfig.ts",
    "utils/__tests__/array.test.js",
    "app/api/auth/[...nextauth]/options.ts",
    "pelican/pelican.js",
    "app/api/auth/[...nextauth]/route.js",
    "dbconfig.js",
    "stories/Button.stories.js",
    "jest.setup.js",
    "jest.config.js",
    "utils/__tests__/properties.test.js",
    "components/new/Gallery/GalleryBase/Components/Error/GalleryError.test.jsx",
    "components/Util/HighlightingNavbar.Providertsx",
    "components/Util/__tests__/VisibilityProvider.test.tsx",
    "migrations/20240724133036_create_ref_tables.js"
  ],
  "exclude": ["node_modules", "constants", "seeds"]
}
