{
  "compilerOptions": {
    "paths": {
      "kotilogi-app/*": ["./*"],
      "@/*": ["./*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js", "actions/user/_test_/updatePassword.test.ts", "_tests_/test.test.jsx"  ],
  "exclude": ["node_modules", "src"],
  "types": ["jest", "node"]
}
